<templates>
    <t t-name="SaleOrderPopup">
        <div>
            <div class="popup-header">
                <h2>{{ title }}</h2>
            </div>
            <div class="popup-body">
                <div class="form-group">
                    <label for="state">Select State:</label>
                    <select t-model="state" id="state">
                        <option value="draft">Draft</option>
                        <option value="confirm">Confirm</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="note">Customer Note:</label>
                    <textarea t-model="note" id="note" rows="4"></textarea>
                </div>
            </div>
            <div class="popup-footer">
                <button class="btn btn-primary" t-on-click="confirm">Confirm</button>
                <button class="btn btn-secondary" t-on-click="cancel">Cancel</button>
            </div>
        </div>
    </t>
</templates>
