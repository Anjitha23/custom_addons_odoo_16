<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="website_sale_clear_cart" inherit_id="website_sale.cart">
        <xpath expr="//a[@class='btn btn-secondary mb32']" position="after">
            <a t-if="website_sale_order and website_sale_order.website_order_line"
               role="button" href="/shop/cart/clear"
               class="btn btn-secondary mb32">Clear Cart
            </a>
        </xpath>
    </template>
</odoo>

